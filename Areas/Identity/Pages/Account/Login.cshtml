@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
} 
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - CarShopOnline_v3</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/CarShopOnline_v3.styles.css" asp-append-version="true" />
        <link rel="stylesheet" 
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro"/>
    </head>
    <body style="margin-bottom: 0">         
        <div class="vh-100 d-flex"
            style="
                background: rgb(2,0,36);
                background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(4,2,59,1) 55%, rgba(255,162,0,1) 100%);">
            <div class="col-md-4 my-auto mx-auto">
                <h1 style="color:#e1e1e1">@ViewData["Title"]</h1>
                <section class="card mx-auto p-3" style="background-color:rgba(255, 255, 255, .2)">
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating" style="margin-bottom: 5px">
                            <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label text-white">
                                    <input class="form-check-input rounded-circle" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg rounded-pill" style="background-color:orange; margin-bottom: 10px;">Log in</button>
                        </div>
                        <div>
                            <p>
                                <a class="text-decoration-none" style="color:#e1e1e1;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a class="text-decoration-none" style="color:#e1e1e1;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </body>
    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2023 - CarShopOnline_v3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
