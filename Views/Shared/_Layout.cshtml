<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarShopOnline_v3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarShopOnline_v3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header class="navbar sticky-top navbar-dark bg-dark">
         <div class="container-fluid">
            <ul class="list-group-horizontal d-flex align-content-around align-items-center text-decoration-none">
                <li class="nav-item">
                    <img src="~/images/car-tier-logo.jpg" width="200" class="navbar-brand" style="margin: 0 0 0 20px"/>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link active text-white">Home</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link active text-white">My Cars</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link active text-white">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link active text-white">logout</a>
                </li>
            </ul>
         </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
        
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CarShopOnline_v3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
