@{
    var cars = ViewBag.Cars;
}

<div class="container">
    <ul id="myUL" class="list-unstyled d-flex justify-content-around mt-3 flex-wrap">
        <li class="col-md-2 m-4 box-shadow p-1 mb-3 bg-body rounded">
            <a href="/Home/AddCar" class="text-decoration-none">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-black">Add new car</h3>
                    </div>
                    <div class="card-body">
                        <img src="~/images/plusSign.png" class="col-md-12" />
                    </div>
                </div>
            </a>
        </li>
        @foreach (var car in cars)
        {
            <li class="col-md-2 m-4 box-shadow p-1 mb-3 bg-body rounded">
                <a asp-controller="Home" asp-action="CarDetails" asp-route-carId="@car.CarId" class="text-decoration-none">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="text-black">@car.Mark @car.Model</h2>
                        </div>
                        <div class="card-body">
                            <img class="col-md-12" src="~/images/@car.Photo" />
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>
