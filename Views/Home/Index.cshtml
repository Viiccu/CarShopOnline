@{
    ViewData["Title"] = "Home Page";
}

<body style="background-color:#303030">
    <div class="container vw-100 default-bg">
        <div class="row vh-100 container">
            <div class="row form-floating mb-3 w-50 align-self-center mx-auto">
                <div class="container ">
                    <div class="row form-floating">
                        <input type="text" 
                            class="form-control rounded-pill" 
                            placeholder="Type here to search..." 
                            name="SearchBox"/>
		            <label for="SearchBox" style="margin:0 0 0 20px"><i class="fa fa-search icon"></i> Type here to search...</label>
                    </div>
                    <div class="row form-floating w-50 mx-auto" style="margin:20px 0 0 0">
                        <select type="text" 
                            class="form-control rounded-pill text-center" 
                            placeholder="Country"
                            name="Country">
                        <option value="Moldova">Moldova</option>
                        <option value="Greece">Greece</option>
                        </select>
                        <label for="Country" style="margin:0 0 0 20px" class="text-center"><i class="fa fa-globe icon"></i></label>
                    </div>
                </div>
	        </div>
        </div>
    </div>
</body>